{
  "uid": "reliability",
  "title": "Reliability",
  "schemaVersion": 38,
  "refresh": "5s",
  "time": { "from": "now-15m", "to": "now" },
  "panels": [
    {
      "type": "gauge",
      "title": "Availability",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 8 },
      "targets": [
        {
          "expr": "100 * (1 - (sum(rate(http_server_duration_count{http_status_code=~\"5..\"}[10s])) / sum(rate(http_server_duration_count[10s]))))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "orange", "value": 99 },
              { "color": "green", "value": 99.9 }
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Request Duration Percentiles (ms)",
      "gridPos": { "x": 6, "y": 0, "w": 18, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum(rate(http_server_duration_bucket[10s])) by (le))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_duration_bucket[10s])) by (le))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_server_duration_bucket[10s])) by (le))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" } },
      "options": { "tooltip": { "mode": "multi" } }
    },
    {
      "type": "timeseries",
      "title": "Request Rate (per Endpoint)",
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(rate(http_server_duration_count{http_route!=\"\"}[10s])) by (http_method, http_route)",
          "legendFormat": "{{http_method}} {{http_route}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } },
      "options": { "tooltip": { "mode": "multi" } }
    },
    {
      "type": "timeseries",
      "title": "Error Rate (5xx per Endpoint)",
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "(sum(rate(http_server_duration_count{http_status_code=~\"5..\", http_route!=\"\"}[10s])) by (http_method, http_route, http_status_code)) + (0 * sum(rate(http_server_duration_count{http_route!=\"\"}[10s])) by (http_method, http_route, http_status_code))",
          "legendFormat": "{{http_method}} {{http_route}} {{http_status_code}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "reqps" } },
      "options": { "tooltip": { "mode": "multi" } }
    }
  ]
}
