{
  "uid": "runtime_health",
  "title": "Runtime Health",
  "schemaVersion": 38,
  "refresh": "5s",
  "time": { "from": "now-15m", "to": "now" },
  "panels": [
    {
      "type": "stat",
      "title": "API Process (Up/Down)",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 4 },
      "targets": [
        {
          "expr": "up{job=\"api\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bool",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "Down" },
                "1": { "text": "Up" }
              }
            }
          ]
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "auto" }
    },
    {
      "type": "stat",
      "title": "Worker Process (Up/Down)",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 4 },
      "targets": [
        {
          "expr": "up{job=\"worker\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bool",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "Down" },
                "1": { "text": "Up" }
              }
            }
          ]
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "auto" }
    },
    {
      "type": "timeseries",
      "title": "API Event Loop Delay",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "avg_over_time(nodejs_eventloop_delay_p99{job=\"api\"}[10s]) * 1000",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "drawStyle": "lines",
            "fillOpacity": 15,
            "showPoints": "never"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "orange", "value": 50 },
              { "color": "red", "value": 100 }
            ]
          }
        }
      },
      "options": { "tooltip": { "mode": "multi" } }
    },
    {
      "type": "timeseries",
      "title": "Worker Event Loop Delay",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "avg_over_time(nodejs_eventloop_delay_p99{job=\"worker\"}[10s]) * 1000",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "drawStyle": "lines",
            "fillOpacity": 15,
            "showPoints": "never"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "orange", "value": 50 },
              { "color": "red", "value": 100 }
            ]
          }
        }
      },
      "options": { "tooltip": { "mode": "multi" } }
    },
    {
      "type": "timeseries",
      "title": "API Event Loop Utilization (%)",
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "nodejs_eventloop_utilization{job=\"api\"} * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "custom": {
            "drawStyle": "lines",
            "fillOpacity": 15,
            "showPoints": "never"
          }
        }
      },
      "options": { "tooltip": { "mode": "multi" } }
    },
    {
      "type": "timeseries",
      "title": "Worker Event Loop Utilization (%)",
      "gridPos": { "x": 12, "y": 6, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "nodejs_eventloop_utilization{job=\"worker\"} * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "custom": {
            "drawStyle": "lines",
            "fillOpacity": 15,
            "showPoints": "never"
          }
        }
      },
      "options": { "tooltip": { "mode": "multi" } }
    },
    {
      "type": "timeseries",
      "title": "API GC Duration by Type (ms)",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "1000 * histogram_quantile(0.95, sum(rate(v8js_gc_duration_bucket{job=\"api\"}[10s])) by (le, v8js_gc_type))",
          "legendFormat": "p95 {{v8js_gc_type}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" } },
      "options": { "tooltip": { "mode": "multi" } }
    },
    {
      "type": "timeseries",
      "title": "Worker GC Duration by Type (ms)",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "1000 * histogram_quantile(0.95, sum(rate(v8js_gc_duration_bucket{job=\"worker\"}[10s])) by (le, v8js_gc_type))",
          "legendFormat": "p95 {{v8js_gc_type}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" } },
      "options": { "tooltip": { "mode": "multi" } }
    },
    {
      "type": "timeseries",
      "title": "API Heap Memory Usage (MB)",
      "gridPos": { "x": 0, "y": 18, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(v8js_memory_heap_used{job=\"api\"}) / 1024 / 1024",
          "legendFormat": "Used",
          "refId": "A"
        },
        {
          "expr": "sum(v8js_memory_heap_limit{job=\"api\"}) / 1024 / 1024",
          "legendFormat": "Limit",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "megabytes",
          "decimals": 0,
          "custom": {
            "drawStyle": "lines",
            "fillOpacity": 15,
            "showPoints": "never"
          }
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "right" },
        "tooltip": { "mode": "multi", "sort": "none" }
      }
    },
    {
      "type": "timeseries",
      "title": "Worker Heap Memory Usage (MB)",
      "gridPos": { "x": 12, "y": 18, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "sum(v8js_memory_heap_used{job=\"worker\"}) / 1024 / 1024",
          "legendFormat": "Used",
          "refId": "A"
        },
        {
          "expr": "sum(v8js_memory_heap_limit{job=\"worker\"}) / 1024 / 1024",
          "legendFormat": "Limit",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "megabytes",
          "decimals": 0,
          "custom": {
            "drawStyle": "lines",
            "fillOpacity": 15,
            "showPoints": "never"
          }
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "right" },
        "tooltip": { "mode": "multi", "sort": "none" }
      }
    }
  ]
}
