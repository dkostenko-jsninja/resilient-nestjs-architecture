{
  "uid": "mongo_performance",
  "title": "Mongo Performance",
  "schemaVersion": 38,
  "refresh": "5s",
  "time": { "from": "now-15m", "to": "now" },
  "panels": [
    {
      "type": "stat",
      "title": "Mongo Process (Up/Down)",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 4 },
      "targets": [{ "expr": "mongodb_up{cluster_role=\"mongod\"}", "refId": "A" }],
      "fieldConfig": {
        "defaults": {
          "unit": "bool",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "Down" },
                "1": { "text": "Up" }
              }
            }
          ]
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    }
  ]
}
