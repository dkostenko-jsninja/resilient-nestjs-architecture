{
  "uid": "mongo_performance",
  "title": "Mongo Performance",
  "schemaVersion": 38,
  "refresh": "5s",
  "time": { "from": "now-15m", "to": "now" },
  "panels": [
    {
      "type": "stat",
      "title": "Mongo Process (Up/Down)",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 4 },
      "targets": [{ "expr": "mongodb_up{cluster_role=\"mongod\"}", "refId": "A" }],
      "fieldConfig": {
        "defaults": {
          "unit": "bool",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "Down" },
                "1": { "text": "Up" }
              }
            }
          ]
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } }
    },
    {
      "type": "timeseries",
      "title": "API Circuit",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "circuit_breaker_state{job=\"api\", dependency=\"mongodb\"}",
          "legendFormat": "Circuit",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "max": 2,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "orange", "value": 1 },
              { "color": "red", "value": 2 }
            ]
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "Closed" },
                "1": { "text": "Half-Open" },
                "2": { "text": "Open" }
              }
            }
          ]
        }
      },
      "options": { "tooltip": { "mode": "multi" } }
    },
    {
      "type": "timeseries",
      "title": "Worker Circuit",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "circuit_breaker_state{job=\"worker\", dependency=\"mongodb\"}",
          "legendFormat": "Circuit",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "max": 2,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "orange", "value": 1 },
              { "color": "red", "value": 2 }
            ]
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "Closed" },
                "1": { "text": "Half-Open" },
                "2": { "text": "Open" }
              }
            }
          ]
        }
      },
      "options": { "tooltip": { "mode": "multi" } }
    }
  ]
}
