{
  "uid": "redis_performance",
  "title": "Redis Performance",
  "schemaVersion": 38,
  "refresh": "5s",
  "time": { "from": "now-15m", "to": "now" },
  "graphTooltip": 2,
  "panels": [
    {
      "type": "stat",
      "title": "Redis Process (Up/Down)",
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 4 },
      "targets": [{ "expr": "redis_up", "refId": "A" }],
      "fieldConfig": {
        "defaults": {
          "unit": "bool",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0 },
              { "color": "green", "value": 1 }
            ]
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": { "text": "Down" },
                "1": { "text": "Up" }
              }
            }
          ]
        }
      },
      "options": { "reduceOptions": { "calcs": ["last"] } }
    },
    {
      "type": "stat",
      "title": "Connected Clients",
      "gridPos": { "x": 8, "y": 0, "w": 8, "h": 4 },
      "targets": [{ "expr": "redis_connected_clients", "refId": "A" }],
      "fieldConfig": { "defaults": { "unit": "clients" } }
    },
    {
      "type": "stat",
      "title": "Total Keys",
      "gridPos": { "x": 16, "y": 0, "w": 8, "h": 4 },
      "targets": [{ "expr": "redis_db_keys{db=\"db0\"}", "refId": "A" }],
      "fieldConfig": { "defaults": { "unit": "none" } }
    },
    {
      "type": "timeseries",
      "title": "Commands per Second",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "rate(redis_commands_processed_total[10s])",
          "legendFormat": "commands/s",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" } },
      "options": { "tooltip": { "mode": "multi" } }
    },
    {
      "type": "timeseries",
      "title": "Command Latency (p95, ms)",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(redis_commands_latencies_usec_bucket[10s])) by (le)) / 1000",
          "legendFormat": "p95",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ms" } },
      "options": { "tooltip": { "mode": "multi" } }
    },
    {
      "type": "timeseries",
      "title": "Cache Hit Ratio",
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 8 },
      "targets": [
        {
          "expr": "redis_keyspace_hits_total / (redis_keyspace_hits_total + redis_keyspace_misses_total)",
          "legendFormat": "hit ratio",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": 0.0 },
              { "color": "orange", "value": 0.7 },
              { "color": "green", "value": 0.9 }
            ]
          }
        }
      },
      "options": { "tooltip": { "mode": "multi" } }
    }
  ]
}
