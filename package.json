{
  "name": "resilient-nestjs-architecture",
  "version": "0.1.0",
  "description": "",
  "author": "",
  "private": true,
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "predotenv": "./predotenv.sh",
    "dotenv": "dotenv -e .env.core -e .env.overlay --",
    "dotenv:local": "dotenv -e .env.core -e .env.overlay.local --",
    "dotenv:k6": "dotenv -e .env.core -e .env.k6 --",
    "start:api": "nest start --entryFile main",
    "start:worker": "nest start --entryFile worker",
    "start:api:local": "npm run dotenv:local -- npm run start:api",
    "start:worker:local": "npm run dotenv:local -- npm run start:worker",
    "compose": "npm run dotenv -- sh -c './telemetry/init.sh && docker compose --profile core --profile deps --profile telemetry up -d --build'",
    "compose:local": "npm run dotenv:local -- sh -c './telemetry/init.sh && docker compose --profile deps --profile telemetry up -d --build'",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "k6": "npm run dotenv:k6 -- docker compose run --rm k6",
    "chaos": "npm run dotenv -- ./test/chaos/run.sh",
    "typeorm": "npm run dotenv:local -- node --loader ts-node/esm ./node_modules/typeorm/cli.js -d src/configs/postgres/datasource.cjs",
    "migration:generate": "npm run typeorm -- migration:generate src/configs/postgres/migrations/$npm_config_name",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert",
    "migration:show": "npm run typeorm -- migration:show"
  },
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "^6.0.2",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/typeorm": "^11.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.66.0",
    "@opentelemetry/exporter-prometheus": "^0.207.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.207.0",
    "@opentelemetry/instrumentation-amqplib": "^0.54.0",
    "@opentelemetry/instrumentation-express": "^0.56.0",
    "@opentelemetry/instrumentation-http": "^0.207.0",
    "@opentelemetry/instrumentation-mongodb": "^0.60.0",
    "@opentelemetry/instrumentation-nestjs-core": "^0.54.0",
    "@opentelemetry/instrumentation-pg": "^0.60.0",
    "@opentelemetry/instrumentation-redis": "^0.56.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.207.0",
    "@opentelemetry/sdk-trace-base": "^2.2.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "amqplib": "^0.10.9",
    "cbor-x": "^1.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "ioredis": "^5.8.2",
    "joi": "^18.0.1",
    "mongoose": "^8.19.2",
    "opossum": "^9.0.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/amqplib": "^0.10.8",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/opossum": "^8.1.9",
    "@types/supertest": "^6.0.2",
    "dotenv-cli": "^11.0.0",
    "envsub": "^4.1.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
